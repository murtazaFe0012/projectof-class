<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        .event-container {
            display: flex;
            gap: 20px;
            padding: 20px;
            flex-wrap: wrap;
        }

        .event-card {
            flex: 1 1 30%;
            min-width: 300px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .event-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .event-details {
            padding: 15px;
        }

        .event-category {
            position: absolute;
            background-color: black;
            color: white;
            padding: 5px 10px;
            border-radius: 0 0 0 8px;
            top: 0;
            right: 0;
        }

        .card-header {
            position: relative;
        }

        .event-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 10px;
            border-top: 1px solid #eee;
        }

        .filter-bar {
            padding: 20px;
            border-bottom: 1px solid #eee;
        }

        .filter {
            display: flex;
            gap: 20px;
            padding: 20px;
            flex-wrap: wrap;
        }
    </style>
</head>

<body>

    <div class="filter-bar">
        <p class="filter">
            <i class="fas fa-filter"></i> Filtres:
            <button class="filter-btn">Toutes les catégories</button>
            <button class="filter-btn">Tous les prix</button>
            <button class="filter-btn">Trier par date</button>
        </p>
        <p>
            <%= events.length %> événements trouvés
        </p>
    </div>

    <div class="event-container">

        <% events.forEach(event=> { %>
            <div class="event-card">
                <div class="card-header">
                    <img src="/<%= event.image_url %>" alt="<%= event.title %>">
                    <span class="event-category">
                        <%= event.category %>
                    </span>
                </div>

                <div class="event-details">
                    <h3>
                        <%= event.title %>
                    </h3>
                    <p>
                        <%= event.description %>
                    </p>

                    <p>
                        <i class="far fa-calendar-alt"></i>
                        <%= event.date %><br>
                            <i class="fas fa-map-marker-alt"></i>
                            <%= event.location %>
                    </p>

                    <div class="event-footer">
                        <span>
                            <%= event.attendance %>/<%= event.capacity %>
                        </span>
                        <span style="font-weight: bold;">$ <%= event.price %></span>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

